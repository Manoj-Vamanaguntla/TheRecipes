<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C3BC38"
    tools:context=".MainActivity">

    <!-- Top Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="55dp"
            android:src="@drawable/applogo"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="145dp"/>


        <Button
            android:id="@+id/signoutBTN"
            android:layout_width="110dp"
            android:layout_height="41dp"
            android:layout_marginTop="45dp"
            android:onClick="gotosignoutAction"
            android:text="Sign Out"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/aboutBTN"
            android:layout_width="110dp"
            android:layout_height="41dp"
            android:layout_marginStart="280dp"
            android:onClick="goToAbout"
            android:text="About"
            android:textSize="14sp" />

        <Button
            android:id="@+id/contactusBTN"
            android:layout_width="110dp"
            android:layout_height="41dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="15dp"
            android:onClick="goToContactUs"
            android:text="Contact"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </LinearLayout>

    <!-- Middle Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/recipe1BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="gotoSearchRecipe"
            android:text="Find Recipes"
            android:textSize="20dp" />

        <Button
            android:id="@+id/recipe2BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="gotoAddNewRecipe"
            android:text="Add new Recipes"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>